.front-cover-wrap-bg {
    filter: blur(20px);
    height: 160px;
    width: 100%;
    background-position: -100px -20px;
    position: absolute;
    z-index: -2;
}

.header-wrap {
    overflow: hidden;
    height: 150px;
    position: relative;
}

.header-content {
    padding: 20px 15px;
}

.front-cover {
    width: 110px;
    height: 110px;
    border-radius: 4px;
}

.album-title {
    height: 50px;
}

.owner-icon {
    width: 25px;
    height: 25px;
    border-radius: 50%;
}

.loading {
    padding: 10rpx;
    font-size: 26rpx;
    color: #666;
    text-align: center;
}