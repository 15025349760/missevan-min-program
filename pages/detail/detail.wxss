.video {
  width: 100%;
}

.video-action {
  box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.05);
}


.poen-app-btn {
  /* padding: 0 5px; */
  background: #ed7760;
  font-size: 12px;
  color: white;
}

.van-tabs__line {
  background-color: var(--tabs-bottom-bar-color, #c14a3f) !important;
}

.van-ellipsis {
  font-size: 11px;
}

.van-tab--active {
  color: #c14a3f !important;
}

.introduction {
  margin: 5px 10px 0 0;
  /* max-width: 68%; */
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.cover-image {
  width: 60px;
  height: 60px;
  border-radius: 4px;
}

.follow-btn .van-button {
  padding: 0 8px;
}

.danmu-wrap {
  padding: 0 10px;
  box-sizing: border-box;
  box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.05);
}

.user-icon {
  border-radius: 50%;
  width: 40px;
  height: 40px;
}

.user-icon-wrap {

  padding: 5px 15px 0 10px;
}

.comment-item-right {
  border-bottom: 1px solid #ECECEC;
  width: 100%;
}

.subcomments {
  background: #EDEDED;
  padding: 8px;
  margin: 0 10px 12px 0;
}

.title-border {
  height: 1px;
  width: 37%;
  background: #E7E7E7;
}

.cv-title {
  margin: 0 10px;
}

.cvs-icon {
  width: 46px;
  height: 46px;
  border-radius: 50%;
}

.cv-group {
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}